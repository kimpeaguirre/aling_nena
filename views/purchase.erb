  <body>

    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand" href="/">Aling Nena</a>
        </div>
      </div>
    </div>

    <div class="container">

      <div class="admin">
        <h1><%="Buy #{@product.name}" %></h1>
	<form role="form" method="POST" action="/purchase/<%= @product.id %>">
          <form class="form-horizontal" role="form">
              </div>
            </div>
            <div class="form-group">
              <label for="sold" class="col-sm-2 control-label">How many do you want to buy?</label>
              <div class="col-sm-10">
		<input type="text" class="form-control" name="nabenta" placeholder="How many do you want to buy?"">
              </div>
            </div>

	<div class="admin">
	<h3>Change for how much?</h3>

              <button type="submit" class="btn btn-default btn-primary" value = "ones"> Php 1 </button>
              <button type="submit" class="btn btn-default btn-primary" value = "fives"> Php 5 </button>
              <button type="submit" class="btn btn-default btn-primary" value = "tens"> Php 10 </button>
              <button type="submit" class="btn btn-default btn-primary" value = "twenties"> Php 20 </button>
              <button type="submit" class="btn btn-default btn-primary" value = "fifties"> Php 50 </button>
              <button type="submit" class="btn btn-default btn-primary" value = "hundreds"> Php 100 </button>
              <button type="submit" class="btn btn-default btn-primary" value = "five_hundreds"> Php 500 </button>
              <button type="submit" class="btn btn-default btn-primary" value = "thousands"> Php 1000 </button>
		<br /> <br /> <br /><br /><br /><br /><br />

            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default btn-primary"> <%= "Buy #{@product.name}" %></button>
                <a href="/products" class="btn btn-default">Back to Product List</a>
              </div>
            </div>
		</div>
          </form>
      </div>

    </div><!-- /.container -->


